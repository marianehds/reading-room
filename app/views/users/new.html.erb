<div class="max-w-md mx-auto mt-16">
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
    <h1 class="text-2xl font-semibold text-primary mb-6 text-center">
      Criar conta
    </h1>

    <%= form_with model: @user, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-primary">
          Nome
        </label>
        <%= f.text_field :name,
                          placeholder: "Seu nome",
                          class: "mt-1 w-full rounded-xl border-gray-200 focus:border-secondary focus:ring-secondary p-2" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-primary">
          Email
        </label>
        <%= f.email_field :email,
                           placeholder: "seu@email.com",
                           class: "mt-1 w-full rounded-xl border-gray-200 focus:border-secondary focus:ring-secondary p-2" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-primary">
          Senha
        </label>
        <%= f.password_field :password,
                              placeholder: "••••••••",
                              class: "mt-1 w-full rounded-xl border-gray-200 focus:border-secondary focus:ring-secondary p-2" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-primary">
          Confirmar senha
        </label>
        <%= f.password_field :password_confirmation,
                              placeholder: "••••••••",
                              class: "mt-1 w-full rounded-xl border-gray-200 focus:border-secondary focus:ring-secondary p-2" %>
      </div>

      <div class="pt-2">
        <%= f.submit "Criar conta",
                     class: "w-full rounded-xl px-4 py-2 text-sm font-medium bg-secondary text-white hover:opacity-90 transition" %>
      </div>
    <% end %>
  </div>
</div>
