<div>
  <h1 class="text-2xl font-semibold text-primary mb-6">
    Livros lidos
  </h1>

  <% if @books.blank? %>
    <div class="rounded-xl border border-gray-100 bg-gray-50 p-8 text-center">
      <p class="text-gray-600">Nenhum livro cadastrado ainda.</p>
    </div>
  <% else %>
    <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <% @books.each do |book| %>
        <li class="flex">
          <%= link_to book_path(book),
                      data: { turbo_frame: "modal" },
                      class: "flex h-full w-full flex-col rounded-xl border border-gray-100 bg-white p-4 shadow-sm hover:border-primary/20 hover:shadow-md transition" do %>
            <p class="font-medium text-primary">
              <%= book.title %>
              <% if book.published_year.present? %>
                <span class="text-gray-400 font-normal">(<%= book.published_year %>)</span>
              <% end %>
            </p>
            <p class="mt-1 text-sm text-gray-600">Autor: <%= book.author %></p>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
