<turbo-frame id="modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-primary/70" data-action="click->modal#close"></div>

    <!-- Modal -->
    <div data-controller="modal" class="relative w-full max-w-xl">
      <div class="rounded-2xl bg-white shadow-xl ring-1 ring-black/5 overflow-hidden">
        <!-- Header -->
        <div class="flex items-start justify-between gap-4 px-6 py-5 border-b border-gray-100">
          <div>
            <h2 class="text-xl font-semibold text-primary leading-tight">
              <%= @book.title %>
            </h2>
            <p class="mt-1 text-sm text-gray-600">
              <span class="font-medium text-primary">Autor:</span> <%= @book.author %>
              <% if @book.published_year.present? %>
                <span class="mx-2 text-gray-300">•</span>
                <span class="font-medium text-primary">Ano:</span> <%= @book.published_year %>
              <% end %>
            </p>
          </div>

          <button
            type="button"
            class="shrink-0 rounded-lg px-2 py-1 text-gray-500 hover:text-primary hover:bg-gray-50 transition"
            data-action="click->modal#close"
            aria-label="Fechar"
          >
            ✕
          </button>
        </div>

        <!-- Body -->
        <div class="px-6 py-5">
          <div class="rounded-xl bg-gray-50 border border-gray-100 p-4">
            <p class="text-sm text-gray-700">
              <span class="font-medium text-primary">Lido por:</span>
              <%= @book.user.name %>
            </p>
          </div>

          <% if current_user == @book.user %>
            <div class="mt-5 flex flex-wrap gap-3">
              <%= link_to "Editar",
                          edit_book_path(@book),
                          data: { turbo_frame: "modal" },
                          class: "inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-medium bg-primary text-white hover:opacity-90 transition" %>

              <%= button_to "Excluir",
                            book_path(@book),
                            method: :delete,
                            form: { data: { turbo_frame: "_top", turbo_confirm: "Tem certeza que deseja excluir?" } },
                            class: "inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-medium bg-secondary text-white hover:opacity-90 transition" %>

              <button
                type="button"
                class="inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-medium bg-gray-100 text-primary hover:bg-gray-200 transition"
                data-action="click->modal#close"
              >
                Fechar
              </button>
            </div>
          <% else %>
            <div class="mt-5">
              <button
                type="button"
                class="inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-medium bg-gray-100 text-primary hover:bg-gray-200 transition"
                data-action="click->modal#close"
              >
                Fechar
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
