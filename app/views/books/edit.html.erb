<turbo-frame id="modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="absolute inset-0 bg-primary/70" data-action="click->modal#close"></div>

    <div data-controller="modal" class="relative w-full max-w-xl">
      <div class="rounded-2xl bg-white shadow-xl ring-1 ring-black/5 overflow-hidden">
        <div class="flex items-start justify-between gap-4 px-6 py-5 border-b border-gray-100">
          <h2 class="text-xl font-semibold text-primary">Editar livro</h2>

          <button
            type="button"
            class="rounded-lg px-2 py-1 text-gray-500 hover:text-primary hover:bg-gray-50 transition"
            data-action="click->modal#close"
            aria-label="Fechar"
          >
            ✕
          </button>
        </div>

        <div class="px-6 py-5">
          <%= form_with model: @book, data: { turbo_frame: "_top" } do |f| %>
            <div class="space-y-3">
              <div>
                <label class="block text-sm font-medium text-primary">Título</label>
                <%= f.text_field :title, class: "mt-1 w-full rounded-xl border-gray-200 focus:border-secondary focus:ring-secondary" %>
              </div>

              <div>
                <label class="block text-sm font-medium text-primary">Autor</label>
                <%= f.text_field :author, class: "mt-1 w-full rounded-xl border-gray-200 focus:border-secondary focus:ring-secondary" %>
              </div>

              <div>
                <label class="block text-sm font-medium text-primary">Ano</label>
                <%= f.number_field :published_year, class: "mt-1 w-full rounded-xl border-gray-200 focus:border-secondary focus:ring-secondary" %>
              </div>
            </div>

            <div class="mt-5 flex gap-3">
              <%= f.submit "Salvar",
                           class: "rounded-xl px-4 py-2 text-sm font-medium bg-secondary text-white hover:opacity-90 transition" %>

              <button type="button"
                      class="rounded-xl px-4 py-2 text-sm font-medium bg-gray-100 text-primary hover:bg-gray-200 transition"
                      data-action="click->modal#close">
                Cancelar
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
